{
	"name": "perception-ts-gpt",
	"version": "0.0.1",
	"description": "Inspired by AutoGPT & AgentGPT, a Typescript implementation of an OpenAI automated prompter",
	"author": "Ben Heidorn, Cybourgeoisie",
	"license": "MIT",
	"engines": {
		"node": ">= 18.12 <19"
	},
	"scripts": {
		"start": "node build/src/index.js",
		"start:dev": "nodemon -r tsconfig-paths/register src/index.ts",
		"lint": "eslint . --ext .ts --ext .mts",
		"prettier": "prettier --config .prettierrc --write .",
		"test": "ts-mocha -p tsconfig.json --bail --recursive test",
		"clean": "rm -rf coverage build tmp",
		"prebuild": "npm run lint",
		"build": "npm run clean && tsc -p tsconfig.release.json"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.1",
		"@types/node": "~18",
		"@typescript-eslint/eslint-plugin": "~5.59",
		"@typescript-eslint/parser": "~5.59",
		"eslint": "~8.39",
		"eslint-config-prettier": "~8.8",
		"eslint-plugin-mocha": "^10.1.0",
		"mocha": "^10.2.0",
		"nodemon": "^2.0.22",
		"prettier": "~2.8",
		"ts-mocha": "^10.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "~5.0"
	},
	"dependencies": {
		"@types/prompts": "^2.4.4",
		"dotenv": "^16.0.3",
		"openai": "^3.2.1",
		"prompts": "^2.4.2",
		"tslib": "~2.5"
	}
}
